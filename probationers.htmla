<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EMProb - Probationers Management</title>
    <link rel="stylesheet" href="probationers.css">
</head>
<body>

    <!-- Loading Screen -->
    <div class="loading-screen" id="loadingScreen">
        <div class="spinner"></div>
        <div class="loading-text">Loading Probationers...</div>
    </div>

    <!-- Notification Toast -->
    <div class="notification" id="notification"></div>

    <!-- Modal Containers (Content injected by probationers.js) -->
    <div class="modal" id="probationerModal"></div>
    <div class="modal" id="announcementModal"></div>
    <div class="modal" id="deleteModal"></div>
    <div class="modal" id="violationsModal"></div>
    <div class="modal" id="announcementsModal"></div>

    <!-- Header -->
    <div class="header" id="mainHeader" style="display: none;">
        <div class="left-section">
            <div class="logo-container">
                <img src="https://iili.io/fnM2iqx.png" alt="EMProb Logo" class="logo">
            </div>
            </div>
            <div class="site-name">EMProb</div>
        </div>
        <div class="nav-buttons">
            <a href="interface.html" class="nav-btn">Map View</a>
            <a href="probationers.html" class="nav-btn active">Probationers</a>
            <a href="profile.html" class="nav-btn">Profile</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-container" id="mainContent" style="display: none;">
        <div class="page-header">
            <div>
                <h1 class="page-title">Probationers Management</h1>
                <p class="page-subtitle">Monitor and manage all probationers under your supervision</p>
            </div>
            <button class="add-btn" id="addProbationerBtn">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z"/>
                </svg>
                Add New Probationer
            </button>
        </div>

        <!-- Probationers Grid -->
        <div class="probationers-grid" id="probationersGrid"></div>

        <!-- Empty State -->
        <div class="empty-state" id="emptyState" style="display: none;">
            <div class="empty-state-icon">Document</div>
            <h3>No Probationers Found</h3>
            <p>You haven't added any probationers yet. Click "Add New Probationer" to get started.</p>
            <button class="add-btn" id="addFirstProbationerBtn">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z"/>
                </svg>
                Add Your First Probationer
            </button>
        </div>
    </div>

    <!-- Authentication Error -->
    <div class="error-message" id="errorMessage" style="display: none;">
        <h3>Authentication Required</h3>
        <p>Please log in to view probationers.</p>
        <button class="error-btn" onclick="window.location.href='index.html'">Go to Login</button>
    </div>

    <!-- Main Script -->
    <script type="module" src="probationers.js"></script>
</body>
</html>
